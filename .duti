com.sublimetext.3 public.shell-script    all
com.sublimetext.3 public.python-script   all
com.sublimetext.3 public.ruby-script     all

# google chrome
com.google.chrome http         all
com.google.chrome https        all
com.google.chrome public.xhtml all
com.google.chrome public.html  all
